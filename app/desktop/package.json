{
  "name": "@becrafter/prompt-desktop",
  "version": "0.0.7",
  "description": "Menu bar desktop wrapper for @becrafter/prompt-server",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "npm run dev",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "tar": "^6.2.1"
  },
  "build": {
    "appId": "com.becrafter.promptserver",
    "productName": "PromptManager",
    "files": [
      "**/*",
      "assets/icon.png"
    ],
    "directories": {
      "output": "../../dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "../../",
        "to": "prompt-server",
        "filter": [
          "package.json",
          "package-lock.json",
          "packages/**/*",
          "examples/**/*",
          "node_modules/**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
