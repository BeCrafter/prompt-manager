{
  "name": "@becrafter/prompt-desktop",
  "version": "0.0.18",
  "description": "Menu bar desktop wrapper for @becrafter/prompt-manager",
  "author": "BeCrafter",
  "homepage": "https://github.com/BeCrafter/prompt-manager",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "pnpm run dev",
    "prebuild": "node ../../scripts/build-icons.js",
    "build": "npx electron-builder"
  },
  "packageManager": "pnpm@9.12.3",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "tar": "^7.5.2"
  },
  "build": {
    "appId": "com.becrafter.promptserver",
    "productName": "Prompt Manager",
    "icon": "assets/icons/icon.png",
    "asar": true,
    "files": [
      "**/*",
      "assets/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/example/**",
      "!node_modules/**/docs/**",
      "!node_modules/**/doc/**",
      "!node_modules/**/*.{md,MD,markdown,txt}",
      "!node_modules/**/.*",
      "!node_modules/**/package-lock.json",
      "!node_modules/**/yarn.lock",
      "!node_modules/**/node_modules/**/test/**",
      "!node_modules/**/node_modules/**/example/**",
      "!node_modules/**/node_modules/**/docs/**",
      "!node_modules/**/node_modules/**/doc/**",
      "!node_modules/**/node_modules/**/*.{md,MD,markdown,txt}",
      "!node_modules/**/node_modules/**/.*"
    ],
    "directories": {
      "output": "../../dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "../../",
        "to": "prompt-manager",
        "filter": [
          "package.json",
          "packages/**/*",
          "examples/**/*",
          "node_modules/**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.xz"
      ],
      "category": "Utility",
      "maintainer": "support@becrafter.com",
      "synopsis": "Menu bar desktop wrapper for Prompt Manager",
      "description": "Prompt Manager is a desktop application that provides a menu bar interface for managing prompts via MCP (Model Context Protocol).",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
