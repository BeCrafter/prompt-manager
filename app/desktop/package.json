{
  "name": "@becrafter/prompt-desktop",
  "version": "0.0.16",
  "description": "Menu bar desktop wrapper for @becrafter/prompt-manager",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "npm run dev",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "tar": "^6.2.1"
  },
  "build": {
    "appId": "com.becrafter.promptserver",
    "productName": "Prompt Manager",
    "files": [
      "**/*",
      "assets/icon.png"
    ],
    "directories": {
      "output": "../../dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "../../",
        "to": "prompt-manager",
        "filter": [
          "package.json",
          "packages/**/*",
          "examples/**/*",
          "!node_modules",
          "!dist",
          "!app/desktop",
          "!scripts",
          "!*.md",
          "!*.lock",
          "!*.log",
          "!*.gitignore",
          "!*.npmignore"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
