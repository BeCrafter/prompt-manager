{
  "name": "@becrafter/prompt-desktop",
  "version": "0.0.18",
  "description": "Menu bar desktop wrapper for @becrafter/prompt-manager",
  "author": "BeCrafter",
  "homepage": "https://github.com/BeCrafter/prompt-manager",
  "private": true,
  "main": "main-refactored.js",
  "scripts": {
    "dev": "electron .",
    "start": "npm run dev",
    "prebuild": "node ../../scripts/build-icons.js",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "tar": "^7.5.2"
  },
  "build": {
    "appId": "com.becrafter.promptserver",
    "productName": "Prompt Manager",
    "icon": "assets/icon.png",
    "files": [
      "**/*",
      "assets/icon.png",
      "!node_modules/**/test/**",
      "!node_modules/**/example/**"
    ],
    "directories": {
      "output": "../../dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "../../",
        "to": "prompt-manager",
        "filter": [
          "package.json",
          "packages/**/*",
          "examples/**/*",
          "node_modules/**/*",
          "!node_modules/7zip-bin/mac/**/*",
          "!node_modules/@img/sharp-darwin-x64/**/*",
          "!node_modules/@img/sharp-darwin-arm64/**/*",
          "!node_modules/@img/sharp-libvips-darwin-x64/**/*",
          "!node_modules/@img/sharp-libvips-darwin-arm64/**/*",
          "!node_modules/app-builder-bin/mac/**/*",
          "!dist",
          "!app/desktop",
          "!scripts",
          "!*.md",
          "!*.lock",
          "!*.log",
          "!*.gitignore",
          "!*.npmignore"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.xz"
      ],
      "category": "Utility",
      "maintainer": "support@becrafter.com",
      "synopsis": "Menu bar desktop wrapper for Prompt Manager",
      "description": "Prompt Manager is a desktop application that provides a menu bar interface for managing prompts via MCP (Model Context Protocol).",
      "desktop": {
        "StartupNotify": "true"
      },
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
