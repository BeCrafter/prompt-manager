{
  "name": "@becrafter/prompt-desktop",
  "version": "0.1.12",
  "description": "Menu bar desktop wrapper for @becrafter/prompt-manager",
  "author": "BeCrafter",
  "homepage": "https://github.com/BeCrafter/prompt-manager",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "npm run dev",
    "prebuild": "cd ../.. && npm run build:icons",
    "build": "electron-builder"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "39.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@becrafter/prompt-manager-core": "file:../../packages/server",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "http-proxy-middleware": "^3.0.5",
    "js-yaml": "^4.1.0",
    "multer": "^2.0.2",
    "node-pty": "^1.0.0",
    "tar": "^7.5.2",
    "ws": "^8.18.0",
    "yaml": "^2.4.1",
    "zod": "^3.23.8"
  },
  "build": {
    "appId": "com.becrafter.promptserver",
    "productName": "Prompt Manager",
    "icon": "assets/icons/icon.png",
    "npmRebuild": true,
    "files": [
      "**/*",
      "assets/**/*",
      "!docs",
      "!.npmignore",
      "!assets/**/*.1.png",
      "!node_modules/**/test/**",
      "!node_modules/**/example/**",
      "!node_modules/**/*.md",
      "!node_modules/**/LICENSE",
      {
        "from": "../../packages/web/",
        "to": "web/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "../../dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "../../packages/resources/tools/",
        "to": "runtime/toolbox/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../env.example",
        "to": "runtime/.env"
      },
      {
        "from": "../../packages/server/configs/",
        "to": "runtime/configs/"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.xz"
      ],
      "category": "Utility",
      "maintainer": "support@becrafter.com",
      "synopsis": "Menu bar desktop wrapper for Prompt Manager",
      "description": "Prompt Manager is a desktop application that provides a menu bar interface for managing prompts via MCP (Model Context Protocol).",
      "desktop": {},
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
