{
  "name": "@becrafter/prompt-manager",
  "version": "0.1.20",
  "description": "Remote MCP Server for managing prompts",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "packages/server/index.js",
  "bin": {
    "prompt-manager": "app/cli/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeCrafter/prompt-manager.git"
  },
  "homepage": "https://github.com/BeCrafter/prompt-manager#readme",
  "bugs": {
    "url": "https://github.com/BeCrafter/prompt-manager/issues"
  },
  "scripts": {
    "dev": "bash scripts/dev-all.sh",
    "dev:backend": "cd packages/server && node --watch server.js",
    "dev:admin": "npm run dev --prefix packages/admin-ui",
    "dev:desktop": "bash scripts/build.sh dev",
    "fix:pty": "npm rebuild node-pty",
    "help": "cd packages/server && node server.js --help",
    "build": "npm run build:admin-ui && npm run build:core",
    "build:core": "npm run build --prefix packages/server",
    "build:admin-ui": "npm run build --prefix packages/admin-ui",
    "build:desktop": "bash scripts/build.sh",
    "build:desktop:all": "bash scripts/build.sh build:all",
    "build:icons": "node ./scripts/build-icons.js",
    "test": "npm run verify:publish && npm run test:server && npm run test:server:integration",
    "test:server": "cd packages/server && npm run test",
    "test:server:watch": "cd packages/server && npm run test:watch",
    "test:server:coverage": "cd packages/server && npm run test:coverage",
    "test:server:integration": "cd packages/server && npm run test:integration",
    "test:e2e": "node test/e2e/test-packaged-app.js",
    "test:module-loading": "node test/e2e/test-module-loading.js",
    "lint": "cd packages/server && npm run lint",
    "lint:fix": "cd packages/server && npm run lint",
    "lint:check": "cd packages/server && npm run lint:check",
    "format": "cd packages/server && npm run format",
    "format:fix": "cd packages/server && npm run format",
    "format:check": "cd packages/server && npm run format:check",
    "verify": "npm run verify:publish",
    "verify:publish": "node scripts/verify-publish.js",
    "check:deps": "bash scripts/check-dependencies.sh",
    "check:env": "bash scripts/check-env.sh",
    "setup:env": "node scripts/preinstall-check.js",
    "postinstall": "npm rebuild node-pty && chmod +x node_modules/node-pty/prebuilds/*/pty.node node_modules/node-pty/prebuilds/*/spawn-helper 2>/dev/null || true"
  },
  "keywords": [
    "mcp",
    "prompt",
    "prompt-mcp",
    "prompt-server",
    "prompt-manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@npmcli/arborist": "^9.0.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^13.0.0",
    "http-proxy-middleware": "^3.0.5",
    "js-yaml": "^4.1.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "node-pty": "^1.0.0",
    "sharp": "^0.34.4",
    "tar": "^7.5.1",
    "to-ico": "^1.0.1",
    "ws": "^8.18.0",
    "yaml": "^2.4.1",
    "zod": "^3.23.8"
  },
  "files": [
    "app/cli/",
    "packages/server/index.js",
    "packages/server/server.js",
    "packages/server/app.js",
    "packages/server/services/*.js",
    "packages/server/mcp/*.js",
    "packages/server/mcp/**/*.js",
    "packages/server/api/*.js",
    "packages/server/utils/*.js",
    "packages/server/middlewares/*.js",
    "packages/server/toolm/*.js",
    "packages/server/toolm/**/*.js",
    "packages/server/configs/**/*.yaml",
    "packages/resources/tools/**/*.js",
    "packages/resources/tools/**/*.md",
    "packages/web/",
    "examples/**/*.yaml",
    "env.example",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22.20.0 <23.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2"
  }
}
