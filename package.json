{
  "name": "@becrafter/prompt-manager",
  "version": "0.0.18",
  "description": "Remote MCP Server for managing prompts",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "packages/server/server.js",
  "bin": {
    "prompt-manager": "app/cli/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeCrafter/prompt-manager.git"
  },
  "homepage": "https://github.com/BeCrafter/prompt-manager#readme",
  "bugs": {
    "url": "https://github.com/BeCrafter/prompt-manager/issues"
  },
  "scripts": {
    "start": "node packages/server/server.js",
    "dev": "node --watch packages/server/server.js",
    "test": "node packages/server/server.js",
    "help": "node packages/server/server.js --help",
    "version": "node packages/server/server.js --version",
    "admin": "ADMIN_ENABLE=true ADMIN_USERNAME=admin ADMIN_PASSWORD=admin123 node packages/server/server.js -p ./examples/prompts",
    "desktop:dev": "rm -rf ~/Library/Application\\ Support/@becrafter/prompt-desktop/prompt-manager && pnpm run dev --prefix app/desktop",
    "desktop:build": "rm -rf ~/Library/Application\\\\ Support/@becrafter/prompt-desktop/prompt-manager && cd app/desktop && npx electron-builder && cd ../.. && echo 'Build completed! Time:'$(date +'%Y-%m-%d %H:%M:%S')",
    "desktop:build:all": "pnpm run build --prefix app/desktop -- --mac --win --linux",
    "desktop:build:mac": "pnpm run build --prefix app/desktop -- --mac",
    "desktop:build:win": "pnpm run build --prefix app/desktop -- --win",
    "desktop:build:linux": "pnpm run build --prefix app/desktop -- --linux",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "packageManager": "pnpm@9.12.3",
  "keywords": [
    "mcp",
    "prompt",
    "prompt-mcp",
    "prompt-server",
    "prompt-manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "sharp": "^0.34.4",
    "tar": "^7.5.1",
    "to-ico": "^1.0.1",
    "yaml": "^2.4.1",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
